<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/video_room_li"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/room_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="8dp">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>




    <LinearLayout
        android:id="@+id/video_room_li"
        android:background="@color/colorGray_White"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/video_room_et"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:padding="5dp"
            android:hint="发布你的评论吧。。。"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/colorWhite"/>

        <TextView
            android:id="@+id/video_room_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textSize="16sp"
            android:textColor="@color/colorGray_1"
            android:layout_marginRight="10dp"/>


        <!--<ImageView-->
        <!--android:id="@+id/video_play1_iv"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:background="@drawable/ripple_bg"-->
        <!--android:src="@mipmap/ic_pingjia" />-->

    </LinearLayout>


</RelativeLayout>