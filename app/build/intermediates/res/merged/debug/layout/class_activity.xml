<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/class_activity_mainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:titleTextColor="@color/colorBlack"
        app:navigationIcon="@mipmap/ic_back_black"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="正在直播"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/class_activity_rv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
            </android.support.v7.widget.RecyclerView>


            <TextView
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="观看记录"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/class_activity_rv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
            </android.support.v7.widget.RecyclerView>


            <TextView
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="互动天地"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="25"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.itigao.ViewHelper.CustomRoundAngleImageView
                        android:id="@+id/class_activity_iv1"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="matrix"/>

                    <com.example.itigao.ViewHelper.CustomRoundAngleImageView
                        android:id="@+id/class_activity_iv2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:adjustViewBounds="true"
                        android:scaleType="matrix"/>

                </LinearLayout>
                
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="9"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/class_activity_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:background="@color/colorGray_White"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="2dp"
                        android:text="查看更多"
                        android:textSize="10sp" />

                    <ImageView
                        android:background="@color/colorGray_White"
                        android:src="@mipmap/ic_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="精品课程"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/class_activity_rv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>



</LinearLayout>