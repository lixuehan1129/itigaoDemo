<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/classesFragment_mainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:titleTextColor="@color/colorBlack"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@id/classesFragment_mainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.itigao.ViewHelper.CustomRoundAngleImageView
                android:layout_margin="10dp"
                android:id="@+id/classFragment_i3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_child1"
                android:scaleType="fitXY" />

            <com.example.itigao.ViewHelper.CustomRoundAngleImageView
                android:layout_margin="10dp"
                android:id="@+id/classFragment_i2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_child2"
                android:scaleType="fitXY" />

            <com.example.itigao.ViewHelper.CustomRoundAngleImageView
                android:layout_margin="10dp"
                android:id="@+id/classFragment_i1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_child3"
                android:scaleType="fitXY" />

            <com.example.itigao.ViewHelper.CustomRoundAngleImageView
                android:layout_margin="10dp"
                android:id="@+id/classFragment_i5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_child4"
                android:scaleType="fitXY" />

            <com.example.itigao.ViewHelper.CustomRoundAngleImageView
                android:layout_margin="10dp"
                android:id="@+id/classFragment_i6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_child5"
                android:scaleType="fitXY" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>