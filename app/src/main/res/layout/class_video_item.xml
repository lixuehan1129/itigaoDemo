<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/class_video_item_relative"
    android:padding="5dp"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/class_video_item_cv"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0.5dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/colorWhite">
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.itigao.ViewHelper.CustomRoundAngleImageView
                android:id="@+id/class_video_item_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <TextView
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/class_video_item_iv"
                android:id="@+id/class_video_item_itr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="14sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>