<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray_White"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/personalFragment_mainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:titleTextColor="@color/colorBlack"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:paddingRight="15dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/personalFragment_code"
                android:layout_marginRight="12dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@mipmap/ic_code"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/personalFragment_set"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@mipmap/ic_set"
                tools:ignore="ContentDescription" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/personalFragment_mainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/personalFragment_l"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="15dp"
                android:paddingRight="20dp"
                android:background="@color/colorGray_White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/personalFragment_picture"
                    android:src="@mipmap/ic_touxiang21"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/colorGray_1"
                    app:civ_border_width="2dp"/>

                <LinearLayout
                    android:paddingLeft="25dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/personalFragment_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="智慧体育云用户"
                        android:textSize="13sp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/personalFragment_level"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="废铁会员1级"
                        android:textSize="10sp" />
                    <TextView
                        android:paddingTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击查看详情"
                        android:textColor="@color/colorBlack"
                        android:textSize="8sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/personalFragment_device1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_gb">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的智能学习设备"
                        android:textSize="12sp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/colorBlack"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/personalFragment_device2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="已经添加的设备"
                        android:textSize="12sp"
                        android:padding="3dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personalFragment_class"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_gb">

                    <TextView
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我喜欢的课程"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/personalFragment_class1"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="学习课程"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/personalFragment_class2"
                        android:paddingTop="2dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="刘老师    已经学习2课时,继续坚持"
                        android:textSize="7sp" />

                    <!--<TextView-->
                        <!--android:id="@+id/personalFragment_class3"-->
                        <!--android:paddingTop="5dp"-->
                        <!--android:paddingLeft="5dp"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="瑜伽训练课堂（钻石班）"-->
                        <!--android:textSize="15sp"-->
                        <!--android:textColor="@color/colorBlack"/>-->
                    <!--<TextView-->
                        <!--android:id="@+id/personalFragment_class4"-->
                        <!--android:paddingTop="2dp"-->
                        <!--android:paddingLeft="5dp"-->
                        <!--android:paddingBottom="3dp"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="已经学习3课时,继续坚持"-->
                        <!--android:textSize="7sp" />-->

                    <TextView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="......"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_gb">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的关注"
                        android:textSize="12sp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/colorBlack"
                        android:padding="3dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我关注的主播(开播/未开播)"
                        android:textSize="10sp"
                        android:padding="3dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/personalFragment_rv"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personalFragment_exam1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_gb">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="校园生活"
                        android:textSize="12sp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/colorBlack"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/personalFragment_exam2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的校园生活，点击查看详情"
                        android:textSize="12sp"
                        android:padding="3dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personalFragment_indoor1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_gb">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="学习历程"
                        android:textSize="12sp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/colorBlack"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/personalFragment_indoor2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="记录了我的学习历程，点击查看详情"
                        android:textSize="12sp"
                        android:padding="3dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personalFragment_go"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_gb">

                    <TextView
                        android:id="@+id/personalFragment_go3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/colorBlack"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/personalFragment_go2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:padding="3dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>



</RelativeLayout>