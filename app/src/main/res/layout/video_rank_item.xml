<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:background="@drawable/bottom_lay"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/video_rank_item_iv"
            android:src="@mipmap/ic_touxiang21"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:civ_border_color="@color/colorBlue"
            app:civ_border_width="1dp"/>

        <TextView
            android:id="@+id/video_rank_item_name"
            android:text="æˆ‘"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/video_rank_item_num"
            android:text="1"
            android:padding="10dp"
            android:textColor="@color/colorGreen1"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"/>

    </LinearLayout>

</RelativeLayout>