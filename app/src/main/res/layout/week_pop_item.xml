<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_gb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/week_pop_down"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="@mipmap/ic_down"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="我的目标"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="5dp"
            android:text="点击删除已有目标"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <com.cy.cyflowlayoutlibrary.FlowLayoutScrollView
        android:id="@+id/week_pop_tar"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.cy.cyflowlayoutlibrary.FlowLayoutScrollView>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="选择目标"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="5dp"
            android:text="点击从中添加一个目标"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <com.cy.cyflowlayoutlibrary.FlowLayoutScrollView
        android:id="@+id/week_pop_add"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.cy.cyflowlayoutlibrary.FlowLayoutScrollView>




</LinearLayout>