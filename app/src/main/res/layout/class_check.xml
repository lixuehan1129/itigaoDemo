            </LinearLayout>

            <LinearLayout
                android:id="@+id/class_check_l6"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/class_check_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="星期六，12-01"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/class_check_rv6"
                    android:padding="3dp"
                    android:background="@drawable/round_gb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/class_check_l7"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/class_check_tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="星期日，12-02"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/class_check_rv7"
                    android:padding="3dp"
                    android:background="@drawable/round_gb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>